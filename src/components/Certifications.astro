---
import { siteConfig } from "../config";
const hasCertifications =
    siteConfig.certifications && siteConfig.certifications.length > 0;
---

{
    hasCertifications && (
        <section
            id="certifications"
            class="p-8 sm:p-12 md:p-16 lg:p-24 bg-gray-50 dark:bg-gray-800/50"
        >
            <div class="max-w-7xl mx-auto">
                <div class="mb-12 sm:mb-16">
                    <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900 dark:text-gray-100">
                        Certifications
                    </h2>
                    <div
                        class="w-[75px] h-[5px] mt-2 rounded-full"
                        style={`background-color: ${siteConfig.accentColor}`}
                    />
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                    {siteConfig.certifications.map((cert) => {
                        const Component = cert.link ? "a" : "div";
                        const linkProps = cert.link
                            ? {
                                  href: cert.link,
                                  target: "_blank",
                                  rel: "noopener noreferrer",
                              }
                            : {};

                        return (
                            <div class="group relative">
                                <Component
                                    {...linkProps}
                                    class={`block relative bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 p-6 flex flex-col h-full transition-all duration-300 ${
                                        cert.link
                                            ? "hover:shadow-xl hover:border-gray-300 dark:hover:border-gray-600 hover:-translate-y-1 cursor-pointer"
                                            : "hover:shadow-lg hover:border-gray-200 dark:hover:border-gray-600"
                                    }`}
                                >
                                    {cert.link && (
                                        <div class="absolute top-4 right-4 w-8 h-8 flex items-center justify-center bg-gray-900 dark:bg-gray-100 rounded-full text-white dark:text-gray-900 transition-all duration-300 group-hover:bg-gray-700 dark:group-hover:bg-gray-300">
                                            <svg
                                                class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M7 17L17 7M17 7H7M17 7V17"
                                                />
                                            </svg>
                                        </div>
                                    )}

                                    <div class="flex items-start justify-between mb-4">
                                        <div
                                            class="flex-shrink-0 w-12 h-12 rounded-lg flex items-center justify-center transition-transform duration-300 group-hover:scale-110"
                                            style={`background-color: ${siteConfig.accentColor}20`}
                                        >
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="24"
                                                height="24"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                class="w-6 h-6"
                                                style={`color: ${siteConfig.accentColor}`}
                                            >
                                                <path
                                                    stroke="none"
                                                    d="M0 0h24v24H0z"
                                                    fill="none"
                                                />
                                                <path d="M15 15m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                                                <path d="M13 17.5v4.5l2 -1.5l2 1.5v-4.5" />
                                                <path d="M10 19h-5a2 2 0 0 1 -2 -2v-10c0 -1.1 .9 -2 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -1 1.73" />
                                                <path d="M6 9l12 0" />
                                                <path d="M6 12l3 0" />
                                                <path d="M6 15l2 0" />
                                            </svg>
                                        </div>
                                        <span
                                            class={`text-xs sm:text-sm text-gray-500 dark:text-gray-400 whitespace-nowrap ml-3 ${cert.link ? "mr-10" : ""}`}
                                        >
                                            {cert.dateRange}
                                        </span>
                                    </div>

                                    <h3 class="text-lg sm:text-xl font-bold text-gray-900 dark:text-gray-100 mb-2 transition-colors">
                                        {cert.name}
                                    </h3>

                                    <p
                                        class="text-sm sm:text-base font-medium mb-3"
                                        style={`color: ${siteConfig.accentColor}`}
                                    >
                                        {cert.issuer}
                                    </p>

                                    {cert.description && (
                                        <p class="text-sm text-gray-600 dark:text-gray-400 mb-4 flex-grow">
                                            {cert.description}
                                        </p>
                                    )}

                                    {cert.skills && cert.skills.length > 0 && (
                                        <div class="flex flex-wrap gap-2 mt-auto pt-2">
                                            {cert.skills.map((skill) => (
                                                <span
                                                    class={`px-2.5 py-1 text-xs font-medium rounded-md transition-all duration-300 ${
                                                        cert.link
                                                            ? "bg-gray-900 dark:bg-gray-700 text-white dark:text-gray-200 group-hover:bg-gray-800 dark:group-hover:bg-gray-600"
                                                            : "bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300"
                                                    }`}
                                                >
                                                    {skill}
                                                </span>
                                            ))}
                                        </div>
                                    )}
                                </Component>
                            </div>
                        );
                    })}
                </div>
            </div>
        </section>
    )
}
