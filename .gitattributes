# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.js text eol=lf
*.mjs text eol=lf
*.ts text eol=lf
*.astro text eol=lf
*.css text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# SVG treated as text
*.svg text

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.avif binary

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.rar binary

# Documents
*.pdf binary

# Lock files should not be modified
package-lock.json binary
bun.lock binary
yarn.lock binary
pnpm-lock.yaml binary
