---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
    hasExperience && (
        <section id="experience" class="p-8 sm:p-12 md:p-16 lg:p-24">
            <div>
                <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
                    <div class="lg:col-span-4">
                        <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900 dark:text-gray-100">
                            Experience
                        </h2>
                        <div
                            class="w-[75px] h-[5px] mt-2 rounded-full"
                            style={`background-color: ${siteConfig.accentColor}`}
                        />
                    </div>

                    <div class="lg:col-span-8">
                        <div class="relative">
                            {siteConfig.experience.map((exp, index) => (
                                <div class="relative mb-12 last:mb-0 experience-item opacity-0 translate-y-4 transition-all duration-700">
                                    {/* Timeline dot at top of card */}
                                    <div
                                        class="absolute left-1/2 -top-2 w-4 h-4 bg-white dark:bg-gray-900 border-2 rounded-full -translate-x-1/2 z-20 transition-all duration-300 scale-0"
                                        style={`border-color: ${siteConfig.accentColor}; background-color: ${siteConfig.accentColor}`}
                                        data-timeline-dot
                                    />

                                    {/* Connecting line below card */}
                                    {index <
                                        siteConfig.experience.length - 1 && (
                                        <div
                                            class="absolute left-1/2 bottom-0 w-0.5 bg-gray-300 dark:bg-gray-700 -translate-x-1/2 translate-y-full z-10 timeline-line origin-top scale-y-0 transition-transform duration-700"
                                            style="height: 3rem;"
                                            data-timeline-line
                                        />
                                    )}

                                    {/* Experience card */}
                                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300">
                                        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
                                            <div>
                                                <h3 class="text-lg sm:text-xl font-semibold text-gray-900 dark:text-gray-100">
                                                    {exp.title}
                                                </h3>
                                                <p
                                                    class="text-base sm:text-lg"
                                                    style={`color: ${siteConfig.accentColor}`}
                                                >
                                                    {exp.company}
                                                </p>
                                            </div>
                                            <span class="text-xs sm:text-sm text-gray-500 dark:text-gray-400 mt-2 sm:mt-0">
                                                {exp.dateRange}
                                            </span>
                                        </div>

                                        <ul class="space-y-2">
                                            {exp.bullets.map((bullet) => (
                                                <li class="flex items-start">
                                                    <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 dark:bg-gray-500 mt-2 mr-3 flex-shrink-0" />
                                                    <span class="text-sm sm:text-base text-gray-600 dark:text-gray-400">
                                                        {bullet}
                                                    </span>
                                                </li>
                                            ))}
                                        </ul>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    )
}

<script>
    function initExperienceAnimations() {
        const items = document.querySelectorAll(".experience-item");

        if (items.length === 0) return;

        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry, index) => {
                    if (entry.isIntersecting) {
                        // Stagger the animation slightly for each item
                        setTimeout(() => {
                            entry.target.classList.remove(
                                "opacity-0",
                                "translate-y-4",
                            );
                            entry.target.classList.add(
                                "opacity-100",
                                "translate-y-0",
                            );

                            // Animate the timeline dot
                            const dot = entry.target.querySelector(
                                "[data-timeline-dot]",
                            );
                            if (dot) {
                                setTimeout(() => {
                                    dot.classList.remove("scale-0");
                                    dot.classList.add("scale-100");
                                }, 200);
                            }

                            // Animate the timeline line
                            const line = entry.target.querySelector(
                                "[data-timeline-line]",
                            );
                            if (line) {
                                setTimeout(() => {
                                    line.classList.remove("scale-y-0");
                                    line.classList.add("scale-y-100");
                                }, 400);
                            }
                        }, index * 100); // Stagger each item by 100ms
                    }
                });
            },
            {
                threshold: 0.2,
                rootMargin: "0px 0px -50px 0px",
            },
        );

        items.forEach((item) => {
            observer.observe(item);
        });
    }

    // Run on initial page load
    if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", initExperienceAnimations);
    } else {
        initExperienceAnimations();
    }

    // Re-run after page navigation (for Astro view transitions if enabled)
    document.addEventListener("astro:page-load", initExperienceAnimations);
</script>
